<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/AddProduct"
            android:layout_width="146dp"
            android:layout_height="49dp"
            android:layout_marginBottom="176dp"
            android:backgroundTint="@color/buttons"
            android:text="AddProduct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUpMain" />

        <Button
            android:id="@+id/btnLogInMain"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="66dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToLogIn"
            android:text="Log In"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnSignUpMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSignUpMain" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="423dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="240dp"
            android:scrollbarSize="15sp"
            android:src="@drawable/aseel50"
            app:layout_constraintBottom_toTopOf="@+id/btnAll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="273dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="86dp"
            android:ellipsize="marquee"
            android:hint="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:scrollbarSize="15sp"
            android:text="𝓛𝓪𝓼𝓽 𝓕𝓲𝓷𝓲𝓼𝓱 "
            android:textColor="#5CBF6565"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/btnSignUpMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSignUpMain"
            android:layout_width="123dp"
            android:layout_height="51dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="293dp"
            android:backgroundTint="@color/buttons"
            android:onClick="goToSignUp"
            android:text="Sign Up"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnLogInMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="145dp"
            android:text="AllProducts"
            android:backgroundTint="@color/buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/AddProduct"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>